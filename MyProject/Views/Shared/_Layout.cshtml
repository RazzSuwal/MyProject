@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor httpContext;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HamroPathsahala</title>
     <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Archivo:wght@400;700&display=swap" rel="stylesheet" />
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="~/css/site.datatablescss" asp-append-version="true" />
    <link rel="stylesheet" href="//cdn.datatables.net/1.13.3/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyProject.styles.css" asp-append-version="true" />
    <!-- Carousel -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Glide.js/3.4.1/css/glide.core.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Glide.js/3.4.1/css/glide.theme.min.css">
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />

</head>
<body>
    <header id="header">
        <div class="navigation">
            <div class="container">
                <nav class="nav">
                    <div class="nav__hamburger">
                        <svg>
                            <use xlink:href='@Url.Content("~/Images/sprite.svg#icon-menu")'></use>
                        </svg>
                    </div>

                    <div class="nav__logo">
                        <a aria-current="page" asp-area="Users" asp-controller="Home" asp-action="Index">
                            Hamro Pathsala
                        </a>
                    </div>
                    <div class="nav__logo2">
                        <a aria-current="page" asp-area="Users" asp-controller="Home" asp-action="Index">
                            HP
                        </a>
                    </div>

                    <div class="nav__menu">
                        <div class="menu__top">
                            <span class="nav__category">Hamro Pathsala</span>
                            <a href="#" class="close__toggle">
                                <svg>
                                    <use xlink:href='@Url.Content("~/Images/sprite.svg#icon-cross")'></use>
                                </svg>
                            </a>
                        </div>
                        <ul class="nav__list">
                            <li class="nav__item">
                                <a aria-current ="page" asp-area="Users" asp-controller="Home" asp-action="Index" class="nav__link ">Home</a>
                            </li>
                            <li class="nav__item">
                                <a asp-area="Admin" asp-controller="Category" asp-action="Index" class="nav__link">Category</a>
                            </li>
                            <li class="nav__item">
                                <a class="nav__link" asp-area="Admin" asp-controller="Course" asp-action="Index">Course</a>
                            </li>
                            <li class="nav__item">
                                <a class="nav__link" asp-area="Admin" asp-controller="Order" asp-action="Index">Order</a>
                            </li>
                            <li class="nav__item">
                                <a class="nav__link" asp-area="Users" asp-action="Privacy" asp-controller="Home">Sell</a>
                            </li>
                            
                        </ul>
                    </div>

                    <div class="nav__icons">
                        
                        
                        <a href="#" class="icon__item" id="search-btn">
                            <svg class="icon__search">
                                <use xlink:href='@Url.Content("~/Images/sprite.svg#icon-search")'></use>
                            </svg>
                        </a>

                        @if (httpContext.HttpContext.Session.GetInt32("SessionCart") != null)
                        {
                               <a class="icon__item" asp-area="Users" asp-controller="cart" asp-action="Index">
                                    <svg class="icon__cart" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart" viewBox="0 0 16 16">
                                        <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l1.313 7h8.17l1.313-7H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                                    </svg>
                                    (@httpContext.HttpContext.Session.GetInt32("SessionCart"))
                                </a>
                        }
                        else
                        {
                                <a class="icon__item" asp-area="Users" asp-controller="cart" asp-action="Index">
                                    <svg class ="icon__cart" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart" viewBox="0 0 16 16">
                                        <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l1.313 7h8.17l1.313-7H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                                    </svg>(0)
                                </a>
                        }
                        <partial name="_LoginPartial" />
                        
                    </div>
                </nav>
            </div>
        </div>

    </header>
    
    @* <div class="container"> *@
        <main role="main">
            <partial name="_Notification" />
            @RenderBody()
        </main>
    @if (ViewBag.ShowFooter == true)
    {
        @Html.Partial("_Footer")
    }
    @* </div> *@

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="//cdn.datatables.net/1.13.3/js/jquery.dataTables.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <!-- Glide Carousel Script -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Glide.js/3.4.1/glide.min.js"></script>
    <!-- Animate On Scroll -->
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>

    <!-- Custom JavaScript -->
    <script src="~/js/index.js"></script>
    <script src="~/js/slider.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
