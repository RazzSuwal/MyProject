
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="col-6 mt-4">
        <h1>List of Orders</h1>
    </div>
    <div class="col-6 mb-4">
        <a asp-controller="order" asp-action="Index" asp-route-status="pending" class="hero__btn">Pending</a>
        <a asp-controller="order" asp-action="Index" asp-route-status="approved" class="hero__btn">Approved</a>
    </div>

<table id="myTable" class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
               Phone Number
            </th>
            <th>
               Download Course
            </th>
            <th>
                Order Status
            </th>
            <th>
                Order Total
            </th>
        </tr>
    </thead>

</table>
</div>

@section scripts{
    <script src="~/js/Order.js"> </script>
}
