@model MyProject.Models.ViewModels.CategoryVM

<div >
    <form class="container" method="post">
    <input type="hidden" asp-for="Category.Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-3">
            <h2 class="text-primary">@((Model.Category == null || Model.Category.Id == 0) ? "Create Category" : "Update Category")</h2>
            <hr />
        </div>
        <div class="row mb-3">
            <label asp-for="Category.Name"></label>
                <input asp-for="Category.Name" class="form-control fs-4" />
            <span asp-validation-for="Category.Name" class="text-danger"></span>
        </div>
        <div class="row mb-3">
            <label asp-for="Category.DisplayOrder"></label>
                <input asp-for="Category.DisplayOrder" class="form-control fs-4" />
            <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
        </div>
        @if (Model.Category == null || Model.Category.Id == 0)
        {
                <button class="hero__btn" type="submit"> Create Category </button>
        }
        else
        {
            <button class="hero__btn" type="submit"> Update Category </button>
        }
    </div>
    <a asp-action="Index" asp-controller="category">Back To List</a>

</form>
</div>

@section scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

