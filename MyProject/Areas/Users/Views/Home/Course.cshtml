@model IEnumerable<MyProject.Models.Course>
<div class="container m-5 h-1000">
    <div class="facility__contianer m-5">

        @foreach (var item in @Model)
        {
            <div class="glide__slide">
                <div class="product">
                    <div class="product__header">
                        <img src="@item.ImageUrl" alt="product">
                    </div>
                    <div class="product__footer">
                        <h3>@item.CourseName</h3>
                        <div class="rating">
                            <svg>
                                <use xlink:href='@Url.Content("~/Images/sprite.svg#icon-star-full")'></use>
                            </svg>
                            <svg>
                                <use xlink:href='@Url.Content("~/Images/sprite.svg#icon-star-full")'></use>
                            </svg>
                            <svg>
                                <use xlink:href='@Url.Content("~/Images/sprite.svg#icon-star-full")'></use>
                            </svg>
                            <svg>
                                <use xlink:href='@Url.Content("~/Images/sprite.svg#icon-star-full")'></use>
                            </svg>
                            <svg>
                                <use xlink:href='@Url.Content("~/Images/sprite.svg#icon-star-empty")'></use>
                            </svg>
                        </div>
                        <div class="product__price">
                            <h4>Rs @item.Price</h4>
                        </div>
                        <a href="#"><button type="submit" class="product__btn">Add To Cart</button></a>
                    </div>
                    <ul>
                        <li>
                            <a data-tip="Quick View" data-place="left" asp-action="Details" asp-controller="Home" asp-route-CourseId="@item.Id">
                                <svg>
                                    <use xlink:href='@Url.Content("~/Images/sprite.svg#icon-eye")'></use>
                                </svg>
                            </a>
                        </li>
                        <li>
                            <a data-tip="Add To Wishlist" data-place="left" href="#">
                                <svg>
                                    <use xlink:href='@Url.Content("~/Images/sprite.svg#icon-heart-o")'></use>
                                </svg>
                            </a>
                        </li>
                        <li>
                            <a data-tip="Add To Compare" data-place="left" href="#">
                                <svg>
                                    <use xlink:href='@Url.Content("~/Images/sprite.svg#icon-loop2")'></use>
                                </svg>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        }


    </div>
</div>